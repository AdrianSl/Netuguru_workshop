- unless notice.nil?
  .alert.alert-success= notice
- unless flash[:error].nil?
  .alert.alert-danger
    %p#error= flash[:error]
.col-xs-6
  %h3 Product
  %dl.dl-horizontal
    %dt Title:
    %dd= product.title
    %dt Description:
    %dd= product.description
    %dt Price:
    %dd= product.price
    %dt Category:
    %dd= product.category.name

  = link_to 'Back', category_products_path, class: 'btn btn-default wide-button'
  - if user_signed_in? and product.user == current_user
    = link_to 'Edit', edit_category_product_path(category.id, product.id)


.col-xs-6
  %h3 Reviews
  - if user_signed_in?
    = render 'reviews/form'
  %ol.reviews
    = render reviews


